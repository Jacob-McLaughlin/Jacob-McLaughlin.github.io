{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "title": {
    "text": [
      "Increase in CO2 Emissions Per Capita and",
      "Real GDP Per Capita versus 1800 levels (for the UK)"
    ],
    "subtitle": "Source: Our World in Data",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Jacob-McLaughlin/Jacob-McLaughlin.github.io/main/portfolio/data/UK_GDP_CO2_Growth.csv",
      "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","}
    },
    {
      "name": "row_domain",
      "source": "source_0",
      "transform": [{"type": "aggregate", "groupby": ["Type"]}]
    }
  ],
  "signals": [
    {"name": "child_width", "value": 300},
    {"name": "child_height", "value": 500}
  ],
  "layout": {"padding": 20, "columns": 1, "bounds": "full", "align": "all"},
  "marks": [
    {
      "name": "row_header",
      "type": "group",
      "role": "row-header",
      "from": {"data": "row_domain"},
      "sort": {"field": "datum[\"Type\"]", "order": "ascending"},
      "title": {
        "text": {
          "signal": "isValid(parent[\"Type\"]) ? parent[\"Type\"] : \"\"+parent[\"Type\"]"
        },
        "orient": "left",
        "style": "guide-label",
        "frame": "group",
        "offset": 10
      },
      "encode": {"update": {"height": {"signal": "child_height"}}},
      "axes": [
        {
          "scale": "y",
          "orient": "left",
          "grid": false,
          "title": "% increase versus 1800",
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(child_height/40)"},
          "zindex": 0
        }
      ]
    },
    {
      "name": "column_footer",
      "type": "group",
      "role": "column-footer",
      "encode": {"update": {"width": {"signal": "child_width"}}},
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "grid": false,
          "title": "Year",
          "labelFlush": true,
          "labelOverlap": true,
          "tickCount": {"signal": "ceil(child_width/40)"},
          "zindex": 0
        }
      ]
    },
    {
      "name": "cell",
      "type": "group",
      "style": "cell",
      "from": {
        "facet": {"name": "facet", "data": "source_0", "groupby": ["Type"]}
      },
      "sort": {"field": ["datum[\"Type\"]"], "order": ["ascending"]},
      "encode": {
        "update": {
          "width": {"signal": "child_width"},
          "height": {"signal": "child_height"}
        }
      },
      "marks": [
        {
          "name": "child_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"Year\"]"},
          "from": {"data": "facet"},
          "encode": {
            "update": {
              "stroke": {"value": "red"},
              "description": {
                "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y')) + \"; % increase versus 1800: \" + (format(datum[\"GrowthPerc\"], \"\"))"
              },
              "x": {"scale": "x", "field": "Year"},
              "y": {"scale": "y", "field": "GrowthPerc"},
              "defined": {
                "signal": "isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]) && isValid(datum[\"GrowthPerc\"]) && isFinite(+datum[\"GrowthPerc\"])"
              }
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "x",
          "orient": "bottom",
          "gridScale": "y",
          "grid": true,
          "tickCount": {"signal": "ceil(child_width/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        },
        {
          "scale": "y",
          "orient": "left",
          "gridScale": "x",
          "grid": true,
          "tickCount": {"signal": "ceil(child_height/40)"},
          "domain": false,
          "labels": false,
          "aria": false,
          "maxExtent": 0,
          "minExtent": 0,
          "ticks": false,
          "zindex": 0
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "field": "Year"},
      "range": [0, {"signal": "child_width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "GrowthPerc"},
      "range": [{"signal": "child_height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "config": {}
}
