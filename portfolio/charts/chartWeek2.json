{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF Lending Outstanding",
      "subtitle":"Credit outstanding to all members. SDRs (billions). Source: IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/Jacob-McLaughlin/Jacob-McLaughlin.github.io/main/portfolio/data/IMFData_Clean.csv"},
  
  "transform": [
    {"calculate": "datum.Totals/1000000000", "as": "billions"}
  ],
  
  "height": 300,
  "width": 260,

  "mark": {
    "type": "bar",
    "color": "#000058"},

"encoding": {
     "x": {
       "field": "Year",
       "type": "nominal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "Totals",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}}
}
}
