{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 400,
  "height": 300,
  "title": {
    "text": [
      "A Map Showing the Party Affliation of Winners of House Districts"
    ],
    "subtitle": ["Sources - MIT Election Lab, Github of deldersveld"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitlePadding": 5,
    "anchor": "start",
    "color": "black"
  },
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/Jacob-McLaughlin/Jacob-McLaughlin.github.io/main/project/data/house_winners_2018_2020.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Jacob-McLaughlin/Jacob-McLaughlin.github.io/main/project/data/deldersveld_adapted_congress_2015",
      "format": {
        "type": "topojson",
        "feature": "cb_2015_us_cd114_20m",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"GEOID\"]",
          "as": "properties.GEOID"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Seat",
          "fields": ["properties.GEOID"],
          "values": ["2018", "2020"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "albersUsa"
    }
  ],
  "signals": [
    {
      "name": "signal1",
      "value": "2018",
      "bind": {"input": "select", "options": ["2018", "2020"], "name": "Year:"}
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": [
            {"test": "signal1 == 2020", "scale": "color", "field": "2020"},
            {"scale": "color", "field": "2018"}
          ],
          "tooltip": {
            "signal": "{\"State\": isValid(datum[\"properties.GEOID\"]) ? datum[\"properties.GEOID\"] : \"\"+datum[\"properties.GEOID\"]}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Winning Party: \" + (isValid(datum[\"2018\"]) ? datum[\"2018\"] : \"\"+datum[\"2018\"]) + \"; State: \" + (isValid(datum[\"properties.GEOID\"]) ? datum[\"properties.GEOID\"] : \"\"+datum[\"properties.GEOID\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["D", "R"],
      "range": ["blue", "red"]
    }
  ],
  "legends": [
    {"title": "Winning Party", "fill": "color", "symbolType": "circle"}
  ],
  "config": {}
}
