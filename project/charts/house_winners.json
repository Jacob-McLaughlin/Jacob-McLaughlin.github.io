{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "title": {
    "text": ["A Map Showing the Party Affliation of Winners of House Districts"],
    "subtitle": ["Sources - MIT Election Lab, Github of deldersveld"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitlePadding": 5,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Jacob-McLaughlin/Jacob-McLaughlin.github.io/main/project/data/deldersveld_adapted_congress_2015",
    "format": {"type": "topojson", "feature": "cb_2015_us_cd114_20m"}
  },
      "params": [    
    {"name":"signal1", 
    "value": "2018",
       "bind":{
         "input": "select",
         "options": ["2018", "2020"],
         "name": "Year:"}}], 
  "transform": [
      {"lookup": "properties.GEOID",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Jacob-McLaughlin/Jacob-McLaughlin.github.io/main/project/data/house_winners_2018_2020.csv"
        },
        "key": "Seat",
        "fields": ["2018", "2020"],
      }
    }
  ],
  "projection": {"type": "albersUsa"},
  "mark": "geoshape",
  "encoding": {
    "color": {
      "condition": {
        "test": "signal1 == 2020", 
        "field": "2020",
        "type": "nominal",
        },
      "field": "2018",
      "type": "nominal",
      "title": "Winning Party",
      "scale": {"domain": ["D","R"],"range": ["blue", "red"]},
    },
    "tooltip": [
      {"field": "properties.GEOID", "type": "nominal", "title": "State"},
      {"field": "signal1", "title": "Winning Party"}
    ]
  }
}
